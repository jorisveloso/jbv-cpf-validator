{
  "name": "jbv-cpf-validator",
  "version": "0.1.0",
  "description": "Validador de CPF brasileiro com TypeScript - leve, rápido e sem dependências",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jorisveloso/jbv-cpf-validator.git"
  },
  "bugs": {
    "url": "https://github.com/jorisveloso/jbv-cpf-validator/issues"
  },
  "homepage": "https://github.com/jorisveloso/jbv-cpf-validator#readme",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "typecheck": "tsc --noEmit",
    "build": "tsup",
    "dev": "tsup --watch",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run test"
  },
  "keywords": [
    "cpf",
    "validator",
    "brazil",
    "brasil",
    "validacao",
    "cpf-validator",
    "validate-cpf",
    "brazilian-cpf",
    "typescript",
    "zero-dependencies"
  ],
  "author": "Joris Veloso <jorisveloso@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.23.0",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "taskin": "^1.0.11",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
